<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RealmTemplateApp.EditTaskPage">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Padding="10" Text="Name" HorizontalOptions="Start" FontSize="18" VerticalOptions="Center"/>
            <Entry TextChanged="Name_Entry_Completed" x:Name="txtName" VerticalOptions="Center" HorizontalOptions="EndAndExpand" WidthRequest="300"/>
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label WidthRequest="100" HorizontalOptions="Start"/>
            <Button CornerRadius="5" Text="Save" Clicked="Save_Button_Clicked" WidthRequest="100" HorizontalOptions="Center" BackgroundColor="CadetBlue"/>
            <Button  CornerRadius="5" Text="Cancel" Clicked="Cancel_Button_Clicked" WidthRequest="100" HorizontalOptions="End"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
