{
    "collection": "Item",
    "database": "todo",
    "roles": [
        {
            "name": "edgeServerReadAllWriteOwn",
            "apply_when": {
                "%%user.type": "edge"
            },
            "document_filters": {
                "write": {
                    "owner_id": "edge"
                },
                "read": true
            },
            "insert": true,
            "delete": true,
            "search": true,
            "read": true,
            "write": true
        },
        {
            "name": "write-own-items",
            "apply_when": {},
            "document_filters": {
                "write": {
                    "owner_id": "%%user.id"
                },
                "read": true
            },
            "read": true,
            "write": true,
            "insert": true,
            "delete": true,
            "search": true
        }
    ]
}
