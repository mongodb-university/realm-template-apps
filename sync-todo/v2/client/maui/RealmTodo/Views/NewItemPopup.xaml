<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="RealmTodo.Views.NewItemPopup"
             CanBeDismissedByTappingOutsideOfPopup="false"
             Size="250,200"
             >
    <VerticalStackLayout Padding="10">
        <Label 
            Text="{Binding DialogTitle}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            TextColor="{DynamicResource Primary}"/>
        <Entry Text="{Binding NewItemSummary}" Placeholder="Item Summary"  PlaceholderColor="#787878"/>
        
        <HorizontalStackLayout >
            <Button  Margin="0,0,20,0" Text="OK" Clicked="HandleOKButtonClicked"/>
            <Button  BackgroundColor="#454556"
                    Text="Cancel" Clicked="HandleCancelButtonClicked"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>

